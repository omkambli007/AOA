#include <stdio.h>

void selection(int arr[], int n) {
    int i, j, small;
    for (i = 0; i < n - 1; i++) {
        small = i;
        for (j = i + 1; j < n; j++) {
            if (arr[j] < arr[small])
                small = j;
        }
        int temp = arr[small];
        arr[small] = arr[i];
        arr[i] = temp;
    }
}

void printArr(int a[], int n) {
    for (int i = 0; i < n; i++)
        printf("%d ", a[i]);
    printf("\n");
}

int main() {
    int n;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int a[n];
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    printf("Before sorting:\n");
    printArr(a, n);

    selection(a, n);

    printf("After sorting:\n");
    printArr(a, n);

    return 0;
}
